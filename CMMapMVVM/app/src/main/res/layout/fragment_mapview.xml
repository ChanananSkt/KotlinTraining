<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#241E5E"
    android:layout_height="match_parent"
    tools:context=".ui.main.MapViewFragment">

    <!-- Toolbar-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/banner" />

            <ImageView
                android:id="@+id/mTrackBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_action_start" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- Button Controls-->
    <LinearLayout
        android:id="@+id/buttons_control"
        android:background="@drawable/layout_bg"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/mMapSearchBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_action_search" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#77ffffff" />

        <ImageView
            android:id="@+id/mMapClearBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_action_delete" />



    </LinearLayout>


    <!--  Information-->
    <TextView
        android:id="@+id/mCurrentLocationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/buttons_control"
        android:text="@string/location_info"
        android:textColor="#ffebd2"
        android:textSize="14sp" />

    <!-- MapView Fragmentx-->
    <fragment
        android:id="@+id/mapFragment"
        android:layout_below="@+id/mCurrentLocationTextView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
